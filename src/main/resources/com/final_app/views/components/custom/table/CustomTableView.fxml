<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<!-- Use fx:root for custom control root element -->

<fx:root spacing="8" styleClass="table-modern-container" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" >
    <TableView fx:id="table" styleClass="table-modern">
        <columns>
            <TableColumn fx:id="statusCol" styleClass="status-column" text="Status" />
            <TableColumn fx:id="dateCol" styleClass="date-column" text="Date" />
            <TableColumn fx:id="scoreBarCol" styleClass="score-column" text="Score" />
            <TableColumn fx:id="durationCol" styleClass="duration-column" text="Duration" />
            <TableColumn fx:id="actionCol" styleClass="action-column" text="Action" />
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
      <stylesheets>
         <URL value="@../../../../styles/general/components/table-modern.css" />
         <URL value="@../../../../styles/general/colors.css" />
      </stylesheets>
    </TableView>
</fx:root>
